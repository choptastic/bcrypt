case erlang:function_exported(rebar3, main, 1) of
    true -> % rebar3
        CONFIG;
    false -> % rebar 2.x or older
        %% Rebuild deps
        [{deps, [{poolboy, ".*",
            {git, "https://github.com/devinus/poolboy.git", {tag, "1.5.2"}}}]}
         | lists:keydelete(deps, 1, CONFIG)]
end.
